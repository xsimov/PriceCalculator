<%= form_for @cart do |f| %>
  <%= f.label "Number of items: " %>
  <%= f.text_field :number_items %><br/>
  <%= f.label "Item price: " %>
  <%= f.text_field :item_price %><br/>
  <%= f.label "Country: " %>
  <%= f.text_field :country_id %><br/>
  <%= f.submit "Calculate!" %>
<% end %>

<%= @total if @total %>